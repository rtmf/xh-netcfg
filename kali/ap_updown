#!/bin/sh
case $PLUTO_VERB in
  up-client-v6)
    ( mk_ap --daemon --config /root/nyghts.conf & disown ) &> /dev/null
    ;;
  down-client-v6)
    for s in 15 9
    do
      for m in mk_ap hostapd dnsmasq haveged
      do
        echo $m[$s]
        pkill -$s $m
      done
      sleep .1
    done
    ;;
esac
